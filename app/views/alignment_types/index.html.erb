<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="page-header">Alignment Type</h1>
  <div class="pull-right">
    <%= link_to 'Create New Alignment Type', new_alignment_type_path, class:'btn btn-info btn-S' %>
  </div>

  <div class="col-md-12">
    </br>
    <div class="panel panel-default">
      <table class="table table-striped">
      <thead>
      <tr>
        <th>Alignment type</th>
        <th>Abbrev</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @alignment_types.each do |alignment_type| %>
          <tr>
            <td><%= alignment_type.alignment_type %></td>
            <td><%= alignment_type.abbrev %></td>

            <td><%= link_to 'Edit', edit_alignment_type_path(alignment_type), class:'btn btn-warning btn-xs' %></td>
            <td><%= link_to 'Delete', alignment_type, method: :delete, class:'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

