<p id="notice"><%= notice %></p>

<h1>Alignment Types</h1>
<div class="container">
  <div class ="container-body">
    <table class='table table-hover'>
      <thead>
      <tr>
        <th>Alignment type</th>
        <th>Abbrev</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @alignment_types.each do |alignment_type| %>
          <tr>
            <td><%= alignment_type.alignment_type %></td>
            <td><%= alignment_type.abbrev %></td>
            <td><%= link_to 'Show', alignment_type, class:'btn btn-default btn-xs' %></td>
            <td><%= link_to 'Edit', edit_alignment_type_path(alignment_type), class:'btn btn-default btn-xs' %></td>
            <td><%= link_to 'Delete', alignment_type, method: :delete, class:'btn btn-default btn-xs', data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<p>
  <%= link_to 'New Alignment Type', new_alignment_type_path, class:'btn btn-default btn-S' %>
