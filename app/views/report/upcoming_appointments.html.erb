<!---- Page Header ---------------->
  <h3 class="page-header"> Upcoming Appointments For The Next Two Weeks</h3>
  <div class="col-md-5">
    <!--<form action="#" method="get">-->
    <div class="input-group">
      <input class="form-control" id="system-search" name="q" placeholder="Search for" required autofocus>
      <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
    </div>
    </br>
    </div>



  <div class="row">

    <div class="col-lg-12">
      <div class="panel panel-default">


        <div class="panel-body">
  <div class ="container-body">

    <table class="table table-bordered table-striped table-highlight table-list-search" id="report_display_table">
      <thead>
      <tr>

        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Course Type </th>
        <th>Interviewer Name  </th>
        <th>Appointment Date</th>
        <th colspan="2"></th>
      </tr>
      </thead>
      <tbody>
      <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment&.application_form&.candidate.first_name %></td>
            <td><%= appointment&.application_form&.candidate.last_name %></td>
            <td><%= appointment&.application_form&.candidate.phone%></td>
            <td><%= appointment&.application_form&.course_type&.course_type %></td>
            <td><%= Faculty.find(appointment&.faculty_id)&.full_name %></td>
            <td><%= appointment&.start.strftime('%B %e at %l:%M %p')%></td>
            <td><%= link_to 'Show', appointment, class: 'btn btn-info btn-xs' %></td>
           </tr>
      <% end %>
      </tbody>

    </table>

  </div>
