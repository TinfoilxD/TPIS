

<div class="container">


  <h1 class="page-header"> Upcoming Appointments For The next Two Weeks</h1>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">


        <div class="panel-body">
  <div class ="container-body">

    <table class="table table-bordered table-striped table-highlight" id="report_display_table">
      <thead>
      <tr>

        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Course Type </th>
        <th>Interviewer Name  </th>
        <th>Appointment Date</th>
        <th colspan="2"></th>
      </tr>
      </thead>
      <tbody>
      <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment&.application_form&.candidate.first_name %></td>
            <td><%= appointment&.application_form&.candidate.last_name %></td>
            <td><%= appointment&.application_form&.candidate.phone%></td>
            <td><%= appointment&.application_form&.course_type&.course_type %></td>
            <td><%= Faculty.find(appointment&.faculty_id)&.full_name %></td>
            <td><%= appointment&.start.strftime('%B %e at %l:%M %p')%></td>
            <td><%= link_to 'Show', appointment, class: 'btn btn-info btn-xs' %></td>
           </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

</div>
</div>
    <p>
      <!--Attempt at logic to clean up navigation UPDATE, IT WORKS-->
      <% if URI(request.referer).path == '/reports_landing' %> </p>
          <%= link_to 'Back' ,reports_landing_path, class: 'btn btn-default btn-S' %>
        <% elsif URI(request.referer).path == '/system_admin_landing' %>
          <%= link_to 'Back', system_admin_landing_path, class: 'btn btn-default btn-S' %>
        <% else %>
           <%= link_to 'Back', reports_landing_path ,class: 'btn btn-default btn-S' %>
        <%end %>

      </p>
    </div>
  </div>
</div>