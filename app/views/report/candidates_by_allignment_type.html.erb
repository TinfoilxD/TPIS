<div class="wrapper-container">

<h3>Candidates by Alignment Type</h3>

<%= pie_chart @results%>


<table class="table table-hover" id="report_display_table">
  <thead>
  <tr>
    <th> First name </th>
    <th> Last name </th>
    <th> Alignment type </th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.last_name %></td>
        <td><%= candidate.alignment_type&.alignment_type %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</table>
</div>