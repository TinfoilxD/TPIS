<div class="row">

  <div class="col-lg-14">
    <div class="panel panel-default">

      <div class="panel-body">
        <div class ="container-body">
    <table class='table table-hover table-striped table-list-search'>
      <thead>
      <tr>
        <th> First name </th>
        <th> Last name </th>
        <th> Email </th>
        <th> Phone number</th>
        <th> Zip code </th>
        <th> Occupation</th>
        <th> Alignment type </th>
        <th>Profile Creation Date</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @candidates.each do |candidate| %>
          <tr>
            <td><%= candidate.first_name %></td>
            <td><%= candidate.last_name %></td>
            <td><%= candidate.email %></td>
            <td><%= candidate.phone %></td>
            <td><%= candidate.zipcode %></td>
            <td><%= candidate.occupation %> </td>
            <td><%= candidate.alignment_type&.alignment_type %></td>
            <td><%=candidate.created_at.strftime("%b %d %Y") %></td>
            <td><%= link_to 'View Profile', candidate , class:'btn btn-info btn-xs' %></td>
