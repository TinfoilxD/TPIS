<p id="notice"><%= notice %></p>

<h1>Course Types</h1>

<table>
  <thead>
    <tr>
      <th>Course type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_types.each do |course_type| %>
      <tr>
        <td><p><%= course_type.course_type %></p></td>
        <td><p><%= link_to 'Show', course_type, class:'btn btn-default btn-xs' %></p></td>
        <td><p><%= link_to 'Edit', edit_course_type_path(course_type), class:'btn btn-default btn-xs' %></p></td>
        <td><p><%= link_to 'Delete', course_type, method: :delete, class:'btn btn-default btn-xs', data: { confirm: 'Are you sure?' } %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <p>
    <%= link_to 'New Course Type', new_course_type_path, class:'btn btn-default btn-S' %>
    |
    <%= link_to 'Back', admin_crud_path, class:'btn btn-default btn-S' %>
  </p>