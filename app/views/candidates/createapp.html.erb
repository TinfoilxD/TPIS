<p id="notice"><%= notice %></p>

<h1>Instructor Candidate Profile</h1>

<div class="container">
  <div class ="container-body">
    <table class='table table-hover'>
      <thead>
      <tr>
        <th> First name </th>
        <th> Last name </th>
        <th> Email </th>

        <th> Occupation</th>
        <th> Alignment type </th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @candidates.each do |candidate| %>
          <tr>
            <td><%= candidate.first_name %></td>
            <td><%= candidate.last_name %></td>
            <td><%= candidate.email %></td>
            <td><%= candidate.occupation %> </td>
            <td><%= candidate.alignment_type&.alignment_type %></td>
            <td><%= link_to 'Create Application', admin_create_app_for_path(candidate), class:'btn btn-default btn-xs'  %></td>

          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>

<%= link_to 'New Candidate', new_candidate_path, class:'btn btn-default btn-S'  %>
