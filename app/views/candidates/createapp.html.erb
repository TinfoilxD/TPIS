<div id="page-wrapper">
<ol class="breadcrumb">
  <li><%=link_to 'Dashboard', system_admin_landing_path%></li>
  <li><%=link_to 'Create Applications', admin_create_app_for_index_path%></li>
</ol>

<h1>Create Applications For Candidates</h1>
<!--Search Bar-->
<div class="col-md-5">
  <form action="#" method="get">
    <div class="input-group">
      <input class="form-control" id="system-search" name="q" placeholder="Search for" required>
      <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
    </div>
  </form>
  <br>
</div>
<!--Search Bar end-->

<div class="container">
  <div class ="container-body">
    <table class='table table-striped table-list-search'>
      <thead>
      <tr>
        <th> First name </th>
        <th> Last name </th>
        <th> Email </th>
        <th> Occupation</th>
        <th> Alignment type </th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @candidates.each do |candidate| %>
          <tr>
            <td><%= candidate.first_name %></td>
            <td><%= candidate.last_name %></td>
            <td><%= candidate.email %></td>
            <td><%= candidate.occupation %></td>
            <td><%= candidate.alignment_type&.alignment_type %></td>
            <td><%= link_to 'Create Application', admin_create_app_for_path(candidate), class:'btn btn-default btn-xs'  %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>
<p>
<%= link_to 'New Candidate', new_candidate_path, class:'btn btn-default btn-S'  %> |
<%= link_to 'Back', system_admin_landing_path, class:'btn btn-default btn-S'  %>
</p>
</div>