<h1>Instructor Candidate Profile</h1>


<div class="container">
  <div class ="container-body">
    <table id="myTable" class='table table-hover'>


  <thead>
    <tr>
      <th onclick="sortTable(0)"> First name </th>
      <th onclick="sortTable(0)"> Last name </th>
      <th onclick="sortTable(0)"> Email </th>
      <th onclick="sortTable(0)"> Phone number</th>
      <th onclick="sortTable(0)"> Zip code </th>
      <th onclick="sortTable(0)"> Occupation</th>
      <th onclick="sortTable(0)"> Alignment type </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.last_name %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.phone %></td>
        <td><%= candidate.zipcode %></td>
        <td><%= candidate.occupation %> </td>
        <td><%= candidate.alignment_type&.alignment_type %></td>
        <td><%= link_to 'View Profile', candidate , class:'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit Profile', edit_candidate_path(candidate), class:'btn btn-default btn-xs'  %></td>
        <td><%= link_to 'Delete', candidate, method: :delete, data: { confirm: 'Are you sure?' } , class:'btn btn-default btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
  </div>


<br>

  <p>
  <%= link_to 'New Candidate', new_candidate_path, class:'btn btn-default btn-S'  %> |
  <%= link_to 'Back', system_admin_landing_path, class: 'btn btn-default btn-S' %>
  </p>
