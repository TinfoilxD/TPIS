<p id="notice"><%= notice %></p>

<h1>Instructor Candidate Profile</h1>

<div class="container">
  <div class ="container-body">
<table class='table table-hover'>
  <thead>
    <tr>
      <th> First name </th>
      <th> Last name </th>
      <th> Email </th>
      <th> Phone number</th>
      <th> Fax number </th>
      <th> Zip code </th>
      <th> Occupation</th>
      <th> Alignment type </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.last_name %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.phone %></td>
        <td><%= candidate.fax%></td>
        <td><%= candidate.zipcode %></td>
        <td><%= candidate.occupation %> </td>
        <td><%= candidate.alignment_type&.alignment_type %></td>
        <td><%= link_to 'View Profile', candidate , class:'btn btn-default btn-S' %></td>
        <td><%= link_to 'Edit Profile', edit_candidate_path(candidate), class:'btn btn-default btn-S'  %></td>
        <td><%= link_to 'Delete', candidate, method: :delete, data: { confirm: 'Are you sure?' } , class:'btn btn-default btn-S' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
  </div>


<br>

<%= link_to 'New Candidate', new_candidate_path, class:'btn btn-default btn-S'  %>
