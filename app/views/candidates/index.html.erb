<p id="notice"><%= notice %></p>

<h1>Instructor Candidate Profile</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th> First name </th>
      <th> Last name </th>
      <th> Email </th>
      <th> Phone </th>
      <th> Zipcode </th>
      <th> Occupation</th>
      <th> Alignment type </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.last_name %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.phone %></td>
        <td><%= candidate.zipcode %></td>
        <td><%= candidate.occupation %> </td>
        <td><%= candidate.alignment_type&.alignment_type %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Delete', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



