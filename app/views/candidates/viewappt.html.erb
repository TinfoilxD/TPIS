<p id="notice"><%= notice %></p>

<ol class="breadcrumb">
  <li><%=link_to 'Dashboard', system_admin_landing_path%></li>
  <li><%=link_to 'Appointments/Applications', admin_view_appointments_index_path%></li>
</ol>

<h1>Candidate Appointment View</h1>
<!--Search Bar-->
<div class="col-md-5">
  <form action="#" method="get">
    <div class="input-group">
      <input class="form-control" id="system-search" name="q" placeholder="Search for" required>
      <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
    </div>
  </form>
  <br>
</div>

<div class="container">
  <div class ="container-body">
    <table class='table table-striped table-list-search'>
      <thead>
      <tr>
        <th> First name </th>
        <th> Last name </th>
        <th> Email </th>
        <th> Occupation</th>
        <th> Alignment type </th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @candidates.each do |candidate| %>
          <tr>
            <td><%= candidate.first_name %></td>
            <td><%= candidate.last_name %></td>
            <td><%= candidate.email %></td>
            <td><%= candidate.occupation %> </td>
            <td><%= candidate.alignment_type&.alignment_type %></td>
            <td></td>
            <td></td>
            <td>
              <!--Logic to see if Candidate has application form -->
                <!-- Appointment method found in candidate.rb based on negatives for no actual reason-->
              <% if candidate.appointment?(candidate) == false%>
                <%= link_to 'View Appointments', url_for , class: 'btn btn-default btn-xs', data: { confirm: 'No Appointments for this user.' }  %>
              <% else %>
                <%=  link_to 'View Appointments',admin_view_appt_percandidate_path(candidate) , class: 'btn btn-default btn-xs' %>
              <% end %>
            </td>
            <td>
              <% if candidate.application?(candidate) == true%>
                <%= link_to 'View Applications', admin_view_all_apps_path(candidate), class:'btn btn-default btn-xs'  %>
              <% else %>
                <%= link_to 'View Applications', url_for, class: 'btn btn-default btn-xs', data: { confirm: 'No Applications for this user.' } %>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>
<p>
<%= link_to 'Back', system_admin_landing_path, class:'btn btn-default btn-S'  %>
</p>