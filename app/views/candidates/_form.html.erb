<%= form_for(candidate) do |f| %>
    <% if candidate.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>

          <ul>
            <% candidate.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div id="form-wrapper" style="min-height: 535px">

      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">

            <div class="panel-heading"> Instructor Candidate Profile </div>

            <div class="panel-body">
              <div class="row">
                <div class="col-lg-6">
                  <form role="form">
    <div class="container-fluid">
      <form class="form-inline">
        <!--- row 1 ----------->
        <div class="row">
          <div class="col-xs-4">
            <label for="first_name"> First name</label>
            <%=f.text_field :first_name, placeholder: 'First Name', class: 'form-control'%>
          </div>

          <div class="col-xs-4">
            <label for="last_name">Last name</label>
            <%=f.text_field :last_name, placeholder: 'Last Name', class: 'form-control'%>
          </div>
        </div>
        <br>
        <!--- row 2 ----------->
        <div class="row">
          <div class="col-xs-8">
            <label for="address">Street address</label>
            <%=f.text_field :address, placeholder: 'Address', class: 'form-control'%>
          </div>

          <div class="col-xs-4">
            <label for="city">City</label>
            <%=f.text_field :city, placeholder: 'City', class: 'form-control'%>
          </div>

          <div class="field">
            <%= f.label 'State', class:'State' %>
            <%= f.select :state, options_for_select(us_states, "TX")%>

          </div>

        </div>


        <br>
        <!--- row 3 ----------->
        <div class="row">

          <div class="col-xs-2">
            <label for="zipcode">Zip code</label>
            <%=f.text_field :zipcode, placeholder: 'Zip Code', class: 'form-control'%>
          </div>


          <div class="field">
            <%= f.label :country %>
            <%= f.select :country, options_for_select(countries, "United States")%>
          </div>

        </div>

        <!--- row 4 ----------->
        <div class="row">
          <div class="col-xs-4">
            <label for="phone">Phone number</label>
            <%=f.text_field :phone, placeholder: 'Phone number', class: 'form-control'%>
          </div>

          <div class="col-xs-4"><label for="fax">Fax number</label>
            <%=f.text_field :fax, placeholder: 'Fax number (optional)', class: 'form-control'%>
          </div>
        </div>

        <br>

        <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email, :value => current_user.email, :readonly => true %>
        </div>


        <br>
        <!--- row 5 ----------->
        <div class="row">
          <div class="col-xs-4">
            <label for="occupation">Occupation</label>
            <%=f.text_field :occupation, placeholder: 'Occupation', class: 'form-control'%>
          </div>

          <div class="field">
            <%= f.label :alignment_type_id %>
            <%= f.collection_select(:alignment_type_id, AlignmentType.all, :id, :alignment_type) %>
          </div>

        </div>
        <br>


        <!--- Submit Button ----------->
        <button type="submit" class="btn btn-primary">Save Profile</button>

    </div>
                </div>

                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>

</div>