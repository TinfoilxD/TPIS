<%= form_for(candidate) do |f| %>
    <% if candidate.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>

          <ul>
            <% candidate.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <! --- Page wrapper begins. Styling is found in application.css.scss------>
    <div id="form-wrapper">

      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-primary">

            <div class="panel-heading"> Instructor Candidate Profile </div>

            <div class="panel-body">
              <div class="row">
                <div class="col-lg-6">
                  <form role="form">
    <div class="container-fluid">
      <form>
        <!--- row 1 ----------->
        <div class="row">
          <div class="col-xs-3">
            <label for="first_name"> First name</label>
            <%=f.text_field :first_name, placeholder: 'First Name', class: 'form-control'%>
          </div>

          <div class="col-xs-3">
            <label for="last_name">Last name</label>
            <%=f.text_field :last_name, placeholder: 'Last Name', class: 'form-control'%>
          </div>
        </div>
        </br>
        <!--- row 2 ----------->
        <div class="row">
          <div class="col-xs-5">
            <label for="address">Street address</label>
            <%=f.text_field :address, placeholder: 'Address', class: 'form-control'%>
          </div>

          <div class="col-xs-3">
            <label for="city">City</label>
            <%=f.text_field :city, placeholder: 'City', class: 'form-control'%>
          </div>

          <div class="col-xs-2">
            <%= f.label :state_code, 'State', class: 'control-label' %>
            <%= f.collection_select :state_id, State.all, :id, :state_name, {prompt: 'Select State'}, {class: 'form-control'} %>

          </div>

          <div class="col-xs-2">
            <label for="zipcode">Zip code</label>
            <%=f.text_field :zipcode, placeholder: 'Zip Code', class: 'form-control'%>
          </div>

        </div>


        <br>
        <!--- row 3 ----------->



        <!--- row 4 ----------->
        <div class="row">
          <div class="col-xs-3">
            <label for="phone">Phone number</label>
            <%=f.text_field :phone, placeholder: 'Phone number', class: 'form-control'%>
          </div>

          <div class="col-xs-3"><label for="fax">Fax number</label>
            <%=f.text_field :fax, placeholder: 'Fax number (optional)', class: 'form-control'%>
          </div>

        <div class="col-xs-3">
          <%= f.label :email %>
          <% if user_signed_in? and current_user.candidate? then%>
              <%= f.text_field :email, :value => current_user.email, :readonly => true,class:'form-control' %>
          <%else%>
              <%= f.text_field :email, class:'form-control' %>
          <%end%>
        </div>
        </div>
        <br>
        <!--- row 5 ----------->
        <div class="row">
          <div class="col-xs-3">
            <label for="occupation">Occupation</label>
            <%=f.text_field :occupation, placeholder: 'Occupation', class: 'form-control'%>
          </div>

          <div class="col-xs-3">
            <label for="alignment">Alignment Type</label>
            <%= f.collection_select :alignment_type_id, AlignmentType.all, :id, :alignment_type, {prompt: "Select an Alignment"}, {class: "form-control"} %>
          </div>
        </div>
        <br>
        <!--- Submit Button ----------->
        <button type="submit" class="btn btn-primary">Save Profile</button>

      </form>
    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
    </div>
<% end %>



