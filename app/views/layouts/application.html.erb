<!DOCTYPE html>
<html>
 <head>
   <title>TPIS</title>
   <%= csrf_meta_tags %>

   <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>-->
   <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
 </head>

 <body>
 <div id="wrapper">
 <!---<div class="navbar navbar-defult  role="navigation"> -->
    <!---<nav class="navbar navbar-inverse bg-primary"> -->
   <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom:0; background-color: #3f3f3f;">
     <div class="container-fluid">
       <div class="navbar-header">
         <div class="navbar-brand">
           <% if user_signed_in? == false then %>
               <%=link_to root_path, class:'navbar-brand' do %>
                   <%= image_tag "/TPIS_Logo.png", class: "logolink", height: '90px' %>
                   <%end%>
               <%end%>

           <% if user_signed_in? and current_user.candidate? then%>
               <%= link_to candidate_landing_path, class: 'navbar-brand' do %>
               <%= image_tag "/TPIS_Logo.png", class: "logolink", height: '90px' %>
               <%end%>
           <%end%>
           <% if user_signed_in? and current_user.system_admin? then%>
             <%= link_to system_admin_landing_path, class: 'navbar-brand' do %>
             <%= image_tag "/TPIS_Logo.png", class: "logolink", height: '90px' %>
           <% end %>
         <% end %>
         </div>
       </div>



         <!--- Candidate Navigation --->
         <ul class="nav navbar-nav">
         <%if user_signed_in? and current_user.candidate? then%>
             <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Candidate <span class="caret"></span></a>
               <ul class="dropdown-menu">
                <%current_candidate = Candidate.where(email: current_user.email).first%>
                <%if current_candidate%>
                 <li><%= link_to 'Edit Profile', profile_edit_path(Candidate.where(email: current_user.email).first)%></li>
                 <%end%>
               </ul>
             </li>
         <%end%>

         </ul>
       <div>
         <ul class="nav navbar-nav pull-right">
           <% if user_signed_in? %>
               <li><%= link_to current_user.email, edit_user_registration_path %></li>
               <li><%= link_to 'Log out', destroy_user_session_path, method: :delete, class:'btn btn-default btn-sm' %></li>
           <% else %>
               <li><%= link_to 'Log In', new_user_session_path,class:'btn btn-default btn-sm' %></li>
               <li><%= link_to 'Sign Up', new_user_registration_path, class:'btn btn-default btn-sm' %></li>
           <% end %>
         </ul>
       </div>

     </div>
   </nav>

   <div class="container">

     <% flash.each do |key, value| %>
         <div class="alert alert-<%=alert_check key%>">
           <%= value %>
         </div>
     <% end %>
   </div>
   <%= yield %>
 </body>
</html>