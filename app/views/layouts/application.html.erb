<!DOCTYPE html>
<html>
 <head>
   <title>TPIS</title>
   <%= csrf_meta_tags %>

   <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>-->
   <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
 </head>


 <body>

   <nav class="navbar navbar-inverse">
     <div class="container-fluid">
       <div class="navbar-header">
         <%= link_to 'TPIS', root_path, class: 'navbar-brand' %>
       </div>
       <ul class="nav navbar-nav">
         <%if user_signed_in? and current_user.system_admin? then%>
             <li><%= link_to 'User Controls', admin_user_controls_path%></li>
             <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Candidate <span class="caret"></span></a>
               <ul class="dropdown-menu">

                 <li><%= link_to 'New Candidate', new_candidate_path%></li>
                 <li><%= link_to 'Show Candidates', candidates_path%></li>
                 <li><a href="#">Test Existing Candidate Link</a></li>
               </ul>
             </li>
         <%end%>

         </ul>
         
         
         <ul class="nav navbar-nav">
         <%if user_signed_in? and current_user.candidate? then%>
             <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Candidate <span class="caret"></span></a>
               <ul class="dropdown-menu">
                 <li><%= link_to 'Edit Profile', candidate_edit_path%></li>
               </ul>
             </li>
         <%end%>

         </ul>


       <div>
         <ul class="nav navbar-nav pull-right">
           <% if user_signed_in? %>
               <li><%= link_to current_user.email, edit_user_registration_path %></li>
               <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
           <% else %>
               <li><%= link_to 'Log In', new_user_session_path %></li>
               <li><%= link_to 'Sign Up', new_user_registration_path %></li>
           <% end %>
         </ul>
       </div>

     </div>
   </nav>

   <div class="container">

     <% flash.each do |key, value| %>
         <div class="alert alert-<%=alert_check key%>">
           <%= value %>
         </div>
     <% end %>
   </div>
   <%= yield %>
 </body>
</html>