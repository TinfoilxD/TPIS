<div id="form-wrapper">
<%= form_for(faculty) do |f| %>
  <% if faculty.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(faculty.errors.count, "error") %> prohibited this faculty from being saved:</h2>

      <ul>
      <% faculty.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-primary">

          <div class="pull-right">
            <div style="padding-right: 8px; padding-top: 4px; ">
              <%= link_to 'Cancel', url_for(:back), class: 'btn btn-danger btn-S' %>

            </div>
          </div>


          <div class="panel-heading"> Faculty Profile </div>

          <div class="panel-body">
            <div class="row">
              <div class="col-lg-6">
                <form role="form">
                  <div class="container-fluid">

  <div class="row">
     <div class="col-md-4">
        <%= f.label :training_center_id %>
         <%= f.collection_select :training_center_id, TrainingCenter.all, :id, :training_center_name,{prompt: "Select One"}, {class: "form-control"} %>
    </div>
 </div>
  </br>

 <div class="row">
   <div class="col-md-2">
     <%= f.label :faculty_type %>
     <%= f.collection_select :faculty_type_id, FacultyType.all, :id, :job_title,{prompt: "Select One"}, {class: "form-control"} %>
   </div>
 </div>
  </br>

   <div class="row">
       <div class="col-xs-3">
              <label for="first_name"> First name</label>
             <%=f.text_field :first_name, placeholder: 'First Name', class: 'form-control'%>
        </div>

        <div class="col-xs-3">
               <label for="last_name">Last name</label>
               <%=f.text_field :last_name, placeholder: 'Last Name', class: 'form-control'%>
        </div>
   </div>

</br>

<div class="row">
  <div class="col-md-4">
    <%= f.label :office_address %>
    <%= f.text_field :office_address,placeholder: 'Office Address',class: 'form-control' %>
  </div>

  <div class="col-xs-3">
    <label for="city">City</label>
    <%=f.text_field :city, placeholder: 'City', class: 'form-control'%>
  </div>

  <div class="col-xs-2">
    <%= f.label :state_code, 'State', class: 'control-label' %>
    <%= f.collection_select :state_id, State.all, :id, :state_name, {prompt: 'Select State'}, {class: 'form-control'} %>
  </div>

  <div class="col-md-2">
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, placeholder: 'Zip Code',class: 'form-control' %>
  </div>

</div>

   </br>

    <div class="row">

  <div class="col-md-3">
        <%= f.label :phone %>
        <%= f.text_field :phone,class: 'form-control' %>
  </div>

  <div class="col-md-3">
    <%= f.label :email %>
    <%= f.text_field :email, :value => @email, :readonly => true,class: 'form-control' %>
  </div>
    </div>
</br>

   <button type="submit" class="btn btn-primary">Save</button>
  </div>
     </form>

<% end %>
</div>
</div>
</div>
</div>
</div>
</div>
  </div>
