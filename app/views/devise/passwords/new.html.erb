<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

    <input type="button" id="get_security_question" value="Submit"/>
    <input type="text" style="display: none;" /> <!-- prevent form submission via enter.-->

    <br><br>
  <div id="security_question_area">

  </div>

  <div id="submit_area">

  </div>
<% end %>

<%= render "devise/shared/links" %>
